@using Dal.Entities;
@model List<Quiz>
<form method="post" action="/Game/InitGame" id="form">

    Choose a Quiz:
    <select name="Name">
        @{
            foreach (var item in Model)
            {
                <option value="@item.Name">@item.Name</option>
            }
        }
    </select>
    <p><button type="submit">Start Game</button></p>
</form>