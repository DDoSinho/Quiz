<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <h4>@User.Identity.Name is login</h4>
        }
        else
        {
            <h4>Nobody login</h4>
        }
    }

    <div>
        @RenderBody()
    </div>
  
   
</body>
</html>
